<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/v1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <ViewSwitcher
                    android:id="@+id/vs_1"
                    style="@style/wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/iv_play1"
                        style="@style/play_style" />

                    <ProgressBar style="@style/wrap_content" />
                </ViewSwitcher>

                <ToggleButton
                    android:id="@+id/tb1"
                    style="@style/zoom_style" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/v2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <ViewSwitcher
                    android:id="@+id/vs_2"
                    style="@style/wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/iv_play2"
                        style="@style/play_style" />

                    <ProgressBar style="@style/wrap_content" />
                </ViewSwitcher>

                <ToggleButton
                    android:id="@+id/tb2"
                    style="@style/zoom_style" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/v3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <ViewSwitcher
                    android:id="@+id/vs_3"
                    style="@style/wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/iv_play3"
                        style="@style/play_style" />

                    <ProgressBar style="@style/wrap_content" />
                </ViewSwitcher>

                <ToggleButton
                    android:id="@+id/tb3"
                    style="@style/zoom_style" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/v4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <ViewSwitcher
                    android:id="@+id/vs_4"
                    style="@style/wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/iv_play4"
                        style="@style/play_style" />

                    <ProgressBar style="@style/wrap_content" />
                </ViewSwitcher>

                <ToggleButton
                    android:id="@+id/tb4"
                    style="@style/zoom_style" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</layout>